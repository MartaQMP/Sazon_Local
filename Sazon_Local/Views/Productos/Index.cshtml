@model List<Producto>
@section style{
    <link rel="stylesheet" src="~/css/views/productos.css"/>
}
<div class="container mt-5">
    <h2 class="text-center mb-4 text-olive">Nuestros Productos</h2>
    @if(Model != null){
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var producto in Model)
        {
            <div class="col">
                <div class="card h-100 product-card shadow-sm">
                    <div class="product-img-container">
                        <img src="~/@producto.Imagen" class="card-img-top" alt="@producto.Nombre">
                        <span class="badge bg-success badge-seasonal">Temporada</span>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-dark">@producto.Nombre</h5>
                        <p class="card-text text-muted small">@producto.Descripcion</p>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="product-price">@producto.PrecioUnidad.ToString() <small>/@producto.UnidadMedida</small></span>
                             </div>
                            <button class="btn btn-sazon w-100 mt-3">
                                <i class="bi bi-cart-plus"></i> Añadir al carrito
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    }
</div>